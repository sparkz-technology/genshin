generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid()) @map("_id")
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refreshToken      String? @map("refresh_token")
  accessToken       String? @map("access_token")
  expiresAt         Int?    @map("expires_at")
  tokenType         String? @map("token_type")
  scope             String?
  idToken           String? @map("id_token")
  sessionState      String? @map("session_state")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@index([userId])
}

model User {
  id            String         @id @default(cuid()) @map("_id")
  name          String?
  email         String?        @unique
  emailVerified DateTime?      @map("email_verified")
  image         String?
  username      String?        @unique
  role          String         @default("USER")
  accounts      Account[]
  sessions      Session[]
  settings      UserSettings?
  redeemedCodes RedeemCode[]
  logs          Log[]

  @@map("users")
}

model VerificationToken {
  id         String   @id @default(cuid()) @map("_id")
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model UserSettings {
  id              String   @id @default(cuid()) @map("_id")
  userId          String   @unique @map("user_id")
  uid             String   @unique
  region          String
  lang            String
  gameBiz         String   @map("game_biz")
  sLangKey        String
  cookieTokenV2   String   @map("cookie_token_v2")
  accountMidV2    String   @map("account_mid_v2")
  accountIdV2     String   @map("account_id_v2")
  ltuidV2         String   @map("ltuid_v2")
  ltokenV2        String   @map("ltoken_v2")
  actId           String   @map("act_id")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

model RedeemCode {
  id          String    @id @default(cuid()) @map("_id")
  code        String    @unique
  status      String    @default("NOT_REDEEMED")
  websiteId   String?   @map("website_id")
  userId      String?   @map("user_id")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  redeemedAt  DateTime?
  website     RedeemCodeWebsite? @relation(fields: [websiteId], references: [id])
  user        User?     @relation(fields: [userId], references: [id])
  logs        Log[]

  @@index([status])
  @@index([websiteId])
  @@index([userId])
  @@map("redeem_codes")
}

model Log {
  id             String     @id @default(cuid()) @map("_id")
  userId         String     @map("user_id")
  type           String     @default("REDEEMED")
  redeemCodeId   String?    @map("redeem_code_id")
  message        String
  status         String
  createdAt      DateTime   @default(now())
  user           User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  redeemCode     RedeemCode? @relation(fields: [redeemCodeId], references: [id])

  @@index([userId])
  @@index([type])
  @@index([redeemCodeId])
  @@map("logs")
}

model RedeemCodeWebsite {
  id          String      @id @default(cuid()) @map("_id")
  name        String      @unique
  url         String
  selector    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  redeemCodes RedeemCode[]

  @@map("redeem_code_websites")
}
